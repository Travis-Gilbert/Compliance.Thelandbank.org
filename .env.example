# Neon Postgres connection (pooled — for Prisma Client queries)
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require&pgbouncer=true"

# Neon Postgres direct connection (for Prisma migrations)
DIRECT_URL="postgresql://user:password@host/dbname?sslmode=require"

# Resend email (optional — falls back to mock/log mode)
RESEND_API_KEY=""

# App URL (for email links)
APP_URL="https://compliance-thelandbank-org.vercel.app"

# FileMaker Data API (optional — portal works without it, uses local data)
FM_SERVER_URL=""          # e.g. https://fm.thelandbank.org or Cloudflare Tunnel URL
FM_DATABASE=""            # FileMaker database name
FM_USERNAME=""            # Data API account username
FM_PASSWORD=""            # Data API account password

# FileMaker layout names (optional — defaults shown)
# FM_LAYOUT_PROPERTIES="ComplianceProperties"
# FM_LAYOUT_BUYERS="Buyers"
# FM_LAYOUT_SUBMISSIONS="BuyerSubmissions"
# FM_LAYOUT_COMMUNICATIONS="CommunicationLog"
